{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run: training script",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src-v2/training/train.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "--config",
        "${workspaceFolder}/configs/training/milan/baseline_50.json"
      ]
    },
    {
        "name": "Debug: Sample Data (Fixed Duration 60s)",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/sample_data.py",
        "console": "integratedTerminal",
        "args": [
            "--config",
            "configs/sampling/milan_fixed_duration_60.yaml",
            "--debug"
        ],
        "cwd": "${workspaceFolder}",
        "env": {},
        "justMyCode": false,
        "python": "/Users/alexkarpekov/miniconda3/envs/discover-v2-env/bin/python"
    },

    {
        "name": "Debug: Encoder Example Usage",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/src/encoders/example_usage.py",
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
        "env": {
            "PYTHONPATH": "${workspaceFolder}"
        },
        "python": "/Users/alexkarpekov/miniconda3/envs/discover-v2-env/bin/python",
        "justMyCode": false,
        "args": []
    },

    {
        "name": "Debug: Train with milan_fixed20_v0",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/train.py",
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
        "env": {
            "PYTHONPATH": "${workspaceFolder}"
        },
        "python": "/Users/alexkarpekov/miniconda3/envs/discover-v2-env/bin/python",
        "justMyCode": false,
        "args": [
            "--config",
            "configs/alignment/milan_fixed20_v0.yaml"
        ]
    }

  ]
}
