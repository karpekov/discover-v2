{
  "comment": "Milan L2 activity classification fine-tuning - Frozen backbone with MLP classifier, excluding 'Other' label",

  "experiment_name": "milan_l2_classification_mlp_no_other",
  "output_dir": "src-v2/trained_models/milan_classification_mlp_no_other",

  "pretrained_model_path": "trained_models/milan_baseline/best_model.pt",

  "train_data_path": "../data/data_for_alignment/milan_training_20/milan_presegmented_train.json",
  "val_data_path": "../data/data_for_alignment/milan_training_20/milan_presegmented_test.json",
  "vocab_path": "../data/data_for_alignment/milan_training_20/milan_vocab.json",

  "sequence_length": 20,
  "max_captions": 4,
  "caption_types": "long",
  "exclude_no_activity": true,
  "exclude_other": true,

  "classifier_hidden_dim": 256,
  "classifier_dropout": 0.1,

  "batch_size": 16,
  "learning_rate": 1e-3,
  "weight_decay": 1e-4,
  "max_epochs": 20,
  "warmup_steps": 100,
  "scheduler": "cosine",
  "patience": 5,

  "gradient_clip_norm": 1.0,
  "accumulation_steps": 1,

  "metrics_interval": 10000,
  "metrics_sample_size": 2000,
  "save_every_n_epochs": 1,
  "validate_every_n_epochs": 1,

  "use_class_weights": true,
  "label_smoothing": 0.0,

  "num_workers": 4,
  "pin_memory": true,
  "device": "auto",

  "seed": 42,

  "wandb": {
    "enabled": true,
    "project": "discover-v2-classification",
    "entity": "cosmic-ml",
    "run_name": "milan_l2_mlp_no_other_frozen",
    "tags": ["milan", "l2_classification", "frozen_backbone", "mlp", "no_other"],
    "notes": "Fine-tuning frozen sensor encoder for L2 activity classification with MLP head, excluding 'Other' label"
  }
}
