{
  "description": "[aruba] Small test dataset for debugging (first 5000 lines)",
  "datasets": ["aruba"],
  "window_sizes": [20],
  "dir_name": "test_small",
  "export_dir": "data/processed/casas/aruba/{dir_name}",
  "output_dir": "data/processed/casas/aruba/{dir_name}",
  "generate_presegmented": false,
  "split_strategy": "random",
  "test_ratio": 0.2,
  "random_seed": 42,
  "max_lines": 50000,
  "max_windows": 500,
  "windowing": {
    "overlap_ratio": 0.0,
    "min_window_size": 8,
    "max_window_size": 100,
    "exclude_no_activity": true
  },
  "features": {
    "use_coordinates": true,
    "use_fourier_coords": true,
    "fourier_coord_dims": 32,
    "include_house_tokens": true,
    "include_event_type": true,
    "include_sensor_type": true,
    "include_time_features": true,
    "include_delta_time": true,
    "time_bucket_minutes": 30,
    "delta_time_log_scale": true,
    "tod_bucketing": "parts_of_day",
    "max_delta_t_minutes": 60,
    "include_day_of_week": true,
    "include_sequence_position": false
  },
  "captions": {
    "use_activity_labels": true,
    "use_temporal_context": true,
    "use_spatial_context": true,
    "use_sensor_context": true,
    "max_caption_length": 200,
    "caption_templates": "default",
    "include_uncertainty": false,
    "use_activity_hierarchy": true,
    "activity_hierarchy_level": 2,
    "temporal_granularity": "hour",
    "spatial_granularity": "room",
    "sensor_granularity": "type"
  },
  "export": {
    "formats": ["json"],
    "include_metadata": true,
    "include_statistics": true,
    "compress_output": false,
    "save_intermediate": false
  }
}
